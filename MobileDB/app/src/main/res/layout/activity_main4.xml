<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity4">


    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#006699">


        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:text="PROFILE"/>

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@color/cardview_shadow_end_color"
            android:text="Logout" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="@string/name"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#006699"
            android:textStyle="bold" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/userview"
            android:textColor="#006699"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp">

    <TextView
        android:layout_width="65dp"
        android:layout_gravity="center"
        android:layout_height="29dp"
        android:textColor="#006699"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:text="@string/dob" />

        <TextView
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:id="@+id/dobview"
            android:textSize="20dp"
            android:textColor="#006699"/>



    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="29dp"
            android:textColor="#006699"
            android:text="@string/address"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:id="@+id/addressview"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#006699"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:text="@string/educationalqualification"
            android:textColor="#006699"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>


    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="60dp">


        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:id="@+id/eduqview"
            android:textSize="20dp"
            android:textColor="#006699"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="29dp"
            android:textColor="#006699"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="@string/sslc" />
        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/sslcview"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#006699"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="85dp"
            android:layout_gravity="center"
            android:layout_height="29dp"
            android:textStyle="bold"
            android:textColor="#006699"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"

            android:text="@string/hsc" />
        <TextView
            android:layout_width="245dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/hscview"
            android:textColor="#006699"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="50dp">

            <TextView
                android:layout_width="65dp"
                android:layout_gravity="center"
                android:layout_height="29dp"
                android:textColor="#006699"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:text="@string/ug" />
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="45dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/ugview"
                android:textColor="#006699"/>

        </LinearLayout>

         <LinearLayout

                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:text="@string/pg"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textColor="#006699"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginLeft="48dp"
                    android:textStyle="bold"
                    android:id="@+id/pgview"
                    android:textColor="#006699"/>

         </LinearLayout>

            </LinearLayout>